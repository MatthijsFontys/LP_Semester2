@model IEnumerable<MVC_ReleaseDateSite.ViewModels.ReleaseViewModelSmall>

@{
    ViewData["Title"] = "AccountPage";
}


@section styles{
    <!-- My CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/index.css">
}

<!-- main content start -->
<div class="wrapper">
    <div class="row">
        <h3 class="text-center col-12"><a href="#" class="subtitle" style="text-decoration: none">Results (@Model.Count())</a></h3>
    </div>
    <div class="row py-2 justify-content-center">
        <!-- Start following releases-->
        @foreach (ReleaseViewModelSmall release in Model) {
            <!-- Start release -->
            <div class="col-12 d-inline-block text-center">
                <div class="hover-color-box  p-2 d-inline-block w-auto h-auto">
                    <a href=@Url.Action("single", "release", new { id = release.Id })>
                        <div class="release-img-wrapper clickable d-block mx-auto">
                            <span>
                                <img src="@release.ImgLocation" />
                            </span>
                        </div>
                    </a>
                    <div>
                        <h5><a href=@Url.Action("single", "release", new { id = release.Id }) class="title-link" style="font-size: 16px">@release.Title</a></h5>
                        <h6>@release.ReleaseDate</h6>
                    </div>
                </div>
            </div>
            <!-- End release -->
        }
    </div>
</div>
