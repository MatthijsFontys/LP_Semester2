@model MVC_ReleaseDateSite.ViewModels.OverviewIndexViewModel

@{
    ViewData["Title"] = "Home"; 
}

@section styles{
    <!-- My CSS-->
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
}

<!-- main content start -->
<div class="wrapper">
    <div class="container justify-content-start justify-content-md-between pt-3">
        <!-- Search bar -->
        <div class="row">
            <form class="col-6 col-md-4 form-inline mx-md-auto  ml-1 justify-content-start justify-content-md-center">
                <input type="text" class="form-control mb-3 w-75" id="search-bar" placeholder="Search">
                <a><span class="fas fa-search btn-icon align-top pl-2 clickable"></span></a>
            </form>
        </div>
        <div class="row">
            <h3 class="text-center col-12"><a href="#" class="subtitle">Populair</a></h3>
        </div>
        <div class="row py-2">
            <!-- Start populair releases-->
        @foreach (MVC_ReleaseDateSite.Models.Release item in Model.PopulairReleases) {
            <!-- Start release -->
            <div class="col-sm-6 col-md-4 my-2 populair-release-wrapper">
                    <div class="release-img-wrapper">
                       <span> <img src="@item.ImgLocation" />
                        <div class="release-follow-small">Follow</div> </span>
                </div>
                <div style="display: inline-block;">
                    <h5><a href= @String.Format("/overview/single/{0}", item.Id)  class="title-link">@item.Title</a></h5>
                    <h6>@item.ReleaseDate.ToShortDateString()</h6>
                    <h6>@item.FollowerCount followers</h6>
                </div>
            </div>
            <!-- End release -->
        }
            <!-- End populair releases -->
        </div> <!-- end row 2-->
        <div class="row">
        </div> <!-- end row -->
        <div class="row">
            <h3 class="text-center col-12"><a href="#" class="subtitle">New</a></h3>
        </div> <!-- end row -->

        <!-- Start New releases-->
        <div class="row py-0 my-0 justify-content-between">
            @foreach (MVC_ReleaseDateSite.Models.Release item in Model.NewReleases) {
                <div class="col-12 col-sm-6 col-md-4 mb-5 text-center new-release-wrapper">
                   <a href="@String.Format("/overview/single/{0}", item.Id)"> <img class="my-auto clickable" src=@item.ImgLocation /> </a>
                </div>
            }
            </div>
        <!-- End new releases-->
    </div> <!-- end container -->
</div>
